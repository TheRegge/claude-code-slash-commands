{
  "project_type": "custom",
  "version_files": [
    {
      "path": "README.md",
      "pattern": "badge/version-([0-9.]+(?:-[a-zA-Z0-9.]+)?)-brightgreen",
      "replacement": "badge/version-$VERSION-brightgreen"
    }
  ],
  "git_tag_prefix": "v",
  "auto_commit": false,
  "commit_message_template": "chore: bump version to $VERSION"
}